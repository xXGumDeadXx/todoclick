---
import Layout from '../layouts/Layout.astro'; 
import Hero from '../components/Hero.astro'


---

<Layout title="Todoklick">
    <main>
    </head>
    <body>
        <!-- Banner Superior -->
            <Hero/>
        <!-- Nuestras Opciones -->
        <section class="nuestras-opciones">
            <h2>Nuestras opciones</h2>
            <div class="opciones-container">
                <a href="/categoria" class="opcion" title="Categoria">
                    <img src="/flayer-principal/categoria.webp" alt="Outlet">
                </a>
                <a href="/publica" class="opcion" title="">
                    <img src="/flayer-principal/publica.webp" alt="">
                </a> 
                <a href="/sobre-nosotros" class="opcion" title="¿Quienes somos?">
                    <img src="/flayer-principal/aboutUs.jpg" alt="¿Quienes somos?" >
                </a>
            </div>
        </section>
        <section class="car-container"> 
            <div>
                <h2>¿Necesitas vender tu auto rapidamente?</h2>
                <p>En Todoklick te lo vendemos rapido y seguro!</p>
            </div>
            <a href="/Servicio-carro">Klick aqui!</a>
        </section>
        <!-- Servicios Destacados -->
        <section class="servicios-destacados">
            <h2>Servicios destacados</h2>
            <div class="servicios-container">
                <a href="./subcategoria/subcategoria-salud" class="servicio" data-astro-prefetch='false'>
                    <img src="/flayer-principal/1.webp" alt="Salud">
                </a>
                <a href="/seleccion-servicio-mecanica" class="servicio" data-astro-prefetch='false'>
                    <img src="/flayer-principal/2.webp" alt="Mecanica">
                </a>
                <a href="/seleccion-servicio-comida" class="servicio">
                    <img src="/flayer-principal/3.webp" alt="Restaurantes" data-astro-prefetch='false'>
                    
                </a >
                <a href="/seleccion-servicio-estetica" class="servicio" data-astro-prefetch='false'>
                    <img src="/estetica.webp" alt="Estetica">
                    
                </a >
            </div>
        </section>
    
        <!-- Formas de Ahorrar -->
        <section class="formas-de-ahorrar">
            <h2>Formas de ahorrar con <br><span>TodoKlick</span></h2>
            <div class="formas-container">
                <article>
                    <div class="forma">
                        <img src="/iconos/icono4.png" alt="Marca PH">
                    </div>
                        <h3>Marca TK.</h3>
                        <p>Servicios de calidad al mejor precio.</p>
                </article>
                <article>
                    <div class="forma">
                        <img src="/iconos/icono1.png" alt="Promociones">
                    </div>
                        <h3>Promociones</h3>
                        <p>Promociones mensuales.</p>
                </article>
                <article>
                    <div class="forma">
                        <img src="/iconos/icono3.png" alt="Dto por cantidad">
                    </div>
                        <h3>Servicios por cantidad.</h3>
                        <p>Ahorra con Servicios especiales.</p>
                </article>
                <article>
                    <div class="forma">
                        <img src="/iconos/icono2.png" alt="¿Eres nuevo?">
                    </div>
                        <h3>¿Eres nuevo?</h3>
                        <p>Envío gratis al unirte a nuestra newsletter.</p>
                </article>
            </div>
        </section>
        <script>
        </script>
        <style>
            /* Reset básico */
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
                font-family: Arial, sans-serif;
            }
    
            body {
                color: #333;
            }
    
           
    
            .banner-content p {
                font-size: 16px;
                margin-bottom: 20px;
            }
    
            .banner-content button {
                background-color: #ffa000;
                color: #fff;
                border: none;
                padding: 10px 20px;
                border-radius: 5px;
                cursor: pointer;
            }
    
            /* Secciones */
            .nuestras-opciones, .servicios-destacados, .formas-de-ahorrar {
                margin: 20px;
            }
    
            .nuestras-opciones h2, .servicios-destacados h2 {
                font-size: 2.5rem;
                color: #111;
                margin: 0 0 1em 0;
                color: #9cca0b
            }
            .servicios-destacados h2{
                color: #FCA311;
            }
    
            .formas-de-ahorrar h2 {
                font-size: 2.5rem;
                color: #080808;
                margin: 2em 0 1em 0; 
                text-align: center;
                text-shadow: 0 0 1.5rem #ccc;
            }

            .formas-de-ahorrar span{
                color: #49b;
            }
    
            /* Contenedores */
            .opciones-container{
                display: flex;
                gap: 20px;
                justify-content: center;
                
            }

            .car-container{
                display: flex;
                justify-content: space-between;
                background-color: royalblue;
                align-items: center;
                color: white;
                padding: 10px 20px;
                width: 90%;
                margin: 3em auto;
                border-radius: 10px;
                padding-inline: 100px;
                
            }

            .car-container a{
                color: white;
                padding: 1rem;
                border: 1px solid white;
                border-radius: 30px;
                transition: all .3s ease-in-out;
            }
            
            .car-container a:hover{
                    background-color: white;
                    color: black;
                    animation: shake .7s;
                }

                @keyframes shake {
                    0% {
                        transform: scale(1) rotate(0);
                    }
                    20% {
                        transform: scale(1.1) rotate(-5deg); 
                    }
                    40% {
                        transform: scale(1.1) rotate(5deg);   
                    }
                    60% {
                        transform: scale(1.1) rotate(-5deg); 
                    }
                    80% {
                     transform: scale(1.1) rotate(5deg);  
                    }
                    100% {
                        transform: scale(1) rotate(0);    
                    }
                }


            .formas-container {
                display: grid;
                grid-template-columns: repeat(4, 200px);
                justify-content: center;
                gap: 3rem;
            }

            article > h3,p{
                text-align: center;
                margin: 0.5rem;
            }
            
            .servicios-container{
                display: flex;
                gap: 2.5em;
                justify-content: center;
            }

            /* Elementos de "Nuestras opciones" y "Servicios destacados" */
            .opcion{
                background-color: #fff;
                border-radius: 8px;
                box-shadow: 0 2px 5px rgba(0,0,0,0.1);
                text-align: center;
                width: 500px;
                transition: all .3s ease;

                &:hover{
                    transform: scale(1.05);
                }
            }

            .opciones-container:hover .opcion:not(:hover), .servicios-container:hover .servicio:not(:hover) {
            transform: scale(0.95); 
            opacity: 0.7; 
        }

            .servicio {
                background-color: #fff;
                border-radius: 8px;
                box-shadow: 0 2px 5px rgba(0,0,0,0.1);
                text-align: center;
                width: 500px;
                transition: all .3s ease;
                &:hover{
                    transform: scale(1.05);
                }
            }
    
            .opcion img, .servicio img {
                width: 100%;
                height: 100%; /* Hace que la imagen ocupe todo el contenedor*/
                object-fit: cover; /*Hace que la imagen cubra el contenedor sin distorsionarse */
                border-radius: 8px;
            }

            .opcion video {
                width: 100%;
                height: 100%;
                object-fit: cover; /* Hace que la imagen ocupe todo el contenedor*/ /*Hace que la imagen cubra el contenedor sin distorsionarse */
            }

    
            .forma {
                background-color: white;
                padding: 1.5rem;
                border-radius: 8px;
                box-shadow: 0 2px 5px rgba(0,0,0,0.3);
                text-align: center;
            }
    
            .forma img {
                width: 80px; /* Ajusta este valor si quieres las imágenes más grandes o pequeñas */
                border-radius: 8px;
                margin-bottom: 10px;
                display: block;
                margin: auto;
            }
            video{
                width: 100%;
                height: auto;
                object-fit: cover;
                border-radius: 10px;
            }
            /* Responsividad */

            @media(max-width: 768px) {
                .nuestras-opciones h2{
                    margin-left: 20px;
                }
                .opciones-container{
                    flex-direction: column;
                    align-items: center;
                }
                
                .servicios-container{
                flex-wrap: wrap;
            }

            .opcion{
                width: 100%;
            }
            .formas-container {
                grid-template-columns: repeat(1, 200px);
            }
                .forma img {
                    width: 30%;
                }

                .car-container{
                    flex-direction: column;
                    text-align: center;
                }
            }
        </style>
