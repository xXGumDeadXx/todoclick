<style>
  body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        a{
            color: white;
        }
        img {
            max-width: 100%;
            height: auto;
        }
        .link:hover{
            text-decoration: underline;
        }
        .container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* Estilos del Header */
        .hero {
            position: relative;
            text-align: center;
            color: white;
        }

        .hero img {
            width: 100%;
            height: auto;
            filter: blur(3px) grayscale(0.3);
        }

        .hero-text {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            padding: 0 20px;
        }

        .hero-text h1 {
            font-size: 3em;
            margin: 0;
        }

        .hero-text p {
            font-size: 1.5em;
        }

        /* Seccion de Estilos */
        section {
            padding: 50px 20px;
            text-align: center;
        }

        .about, .values, .history, .team, .office {
            background: #f8f8f8;
            margin: 20px 0;
        }

        .about-images {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
        }

        .value {
            margin: 20px;
            flex: 1;
            min-width: 250px;
        }

        .timeline {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .timeline-item {
            margin: 10px 0;
        }

        .team-members {
            display: flex;
            flex-wrap: wrap;
            justify-content:space-around;
        }

        .contact p, .contact h3 {
            margin: 5px 0;
        }

        .map iframe {
            width: 100%;
            height: 300px;
        }

        /* Media Queries */
        @media (max-width: 768px) {
            .hero-text h1 {
                font-size: 2em;
            }

            .hero-text p {
                font-size: 1.2em;
            }

            .about-images, .team-members {
                flex-direction: column;
            }

            .value, .member {
                min-width: 100%;
            }


            .contact, .map {
                width: 100%;
            }
        }

        @media (max-width: 480px) {
            .hero-text h1 {
                font-size: 1.5em;
            }

            .hero-text p {
                font-size: 1em;
            }

            section {
                padding: 20px 10px;
            }

        }

     header {
    text-align: center;
    padding: 2rem 1rem;
    background-color: #f4f4f4;
}

header h1 {
    font-size: 2rem;
    margin-bottom: 1rem;
}

header p {
    font-size: 1rem;
    margin-bottom: 1.5rem;
}

.sign-up {
    background-color: #5e4db2;
    color: #fff;
    border: none;
    padding: 0.75rem 1.5rem;
    cursor: pointer;
    border-radius: 5px;
    font-size: 1rem;
}

.about-us {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    padding: 2rem 1rem;
    background-color: #fff;
}

.about-us img {
    max-width: 100%;
    width: 40%;
    margin-right: 2rem;
}

.about-us .content {
    flex: 1;
}

.about-us h2 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
}

.about-us p {
    font-size: 1rem;
}

.stats {
    display: flex;
    justify-content: space-around;
    padding: 2rem 1rem;
    background-color: #f4f4f4;
    text-align: center;
}

.stats .stat {
    flex: 1;
}

.stats h3 {
    font-size: 2rem;
    color: #5e4db2;
    margin-bottom: 0.5rem;
}

.stats p {
    font-size: 1rem;
}

.video-demo {
    padding: 2rem 1rem;
    text-align: center;
}

.video-demo video {
    width: 100%;
    max-width: 800px;
    border-radius: 10px;
}

/* Estilos para la Sección de Nuestro Equipo */
.our-team {
    padding: 2rem 1rem;
    background-color: #fff;
    text-align: center;
}

.our-team h2 {
    margin-bottom: 2rem;
}

.team-members {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    align-items:center;
}

.member {
    text-align: center;
    width: 30%;
    margin-bottom: 2rem;
}

.member img {
    max-width: 100%;
    border-radius: 40%;
    margin-bottom: 1rem;
}

.member h3 {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
}

.member p {
    font-size: 1rem;
    color: #777;
}

/* Estilos para la Sección de Noticias (News) */
.news {
    padding: 2rem 1rem;
    background-color: #333;
    text-align: center;
}

.news h2 {
    margin-bottom: 2rem;
    color: white;
}

.news-items {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.news-item {
    background-color: #fff;
    width: 30%;
    margin-bottom: 2rem;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    border-radius: 8px;
}

.news-item img {
    max-width: 100%;
    height: auto;
}

.news-content {
    padding: 1rem;
}

.news-content h3 {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
}

.news-content p {
    font-size: 1rem;
    color: #555;
}

/* Estilos para la Sección de Contacto */
.contact {
    padding: 2rem 1rem;
    background-color: #333;
    color: #fff;
    text-align: center;
}

.contact h2 {
    margin-bottom: 1rem;
}

.contact button {
    background-color: #5e4db2;
    color: #fff;
    border: none;
    padding: 0.75rem 1.5rem;
    cursor: pointer;
    border-radius: 5px;
    font-size: 1rem;
}

/* Media Queries para el diseño responsive */
@media (max-width: 768px) {
    .about-us {
        flex-direction: column;
    }

    .about-us img {
        width: 100%;
        margin-bottom: 1rem;
    }

    .stats {
        flex-direction: column;
    }

    .stats .stat {
        margin-bottom: 1rem;
    }

    .team-members, .news-items {
        flex-direction: column;
    }

    .team-members .member, .news-item {
        width: 70%;
    }
}

.item {
    margin-top: 10px;
}

.item p {
    font-size: 14px;
    margin: 0;
}
</style>