/*=============== MODAL ===============*/



.modal__container{
  position: fixed;
  top: 0;
  left: 0;
  background-color: #b9b9b991;
  width: 100%;
  height: 100%;
  display: grid;
  overflow: hidden;
  align-items: flex-end;
  transition: all .3s;
  z-index: 1;
  visibility: hidden;
  opacity: 0;

  /*=== Effect 3 ===*/
  /* perspective: 1000px; */
}

.modal__content{
  position: relative;
  background-color: white;
  text-align: center;
  padding: 3rem 2rem 2rem;
  border-radius: 1rem 1rem 0 0;
  transition: all .3s;

  /*=== Effect 1 ===*/
  transform: translateY(10%);

  /*=== Effect 2 ===*/
  /* transform: scale(.5) translateY(10%); */

  /*=== Effect 3 ===*/
  /* transform: rotateX(65deg) scale(.75) translateY(10%);
  transform-origin: 50% 100%; */
}

.modal__img{
