<style>
/* Hero Section */
.hero {
    width: 100%;
    height: auto;
    text-align: center;
    margin-top: 60px;
}

.hero img {
    width: 50%;

}


    /* Categories Section */
.categories {
    padding: 3rem;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    width: 70%;
    margin: auto;
    gap: 7rem ;
}

.category {
    background-color: transparent;
    border-radius: 10px;
    text-align: center;
    flex: 1;
    box-shadow: 0 0 10px 0 #00000036;
    min-width: 200px;
    max-width: 300px;
    transition: transform 0.3s ease-in-out;
    align-items: center;
    display: flex;
    flex-direction: column;
    gap:0.5rem;
}

.category:hover {
    transform: scale(1.05);
}

.category p {
    margin: 0;
    font-size: 18px;
    font-weight: bold;
}

.category img{
    width: 70px;
}

@media(max-width: 600px){
    .hero img{
        width: 100%;
    }
    .categories{
        gap:4rem ;
    }
}
</style>
