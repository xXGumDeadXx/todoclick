---
import Layout from '../layouts/Layout.astro';
import Card from '../components/card-servicio.astro'


import CardInfo from '../components/card-info.astro'
---

<Layout title='Servicio-Estetica'>
    <div id="main-content">
        <main>
            <section class="hero">
                <img src="/subcategoria/estetica.png" alt="El solar de rosa" class="hero-image">
            </section>
            <!-- Content Section -->

            <section class="profiles">
                <!--Obligatorio los atributos -->
                <Card 
                href="/cliente/hair shop"
                nombre="Hair Shop"
                descripcion="Bienvenidos a Hair Shop: Somos tu destino para transformar tu cabello con estilo y elegancia. Nuestro equipo de expertos está listo para realzar tu look. ¡Te esperamos!"
                profesion="Paluqueria"
                src="https://i.ibb.co/5KQJz0D/IMG-20240627-152420.jpg" />

                <CardInfo 
                title="¿Te gustaría que tu emprendimiento aparezca en nuestra página web?" 
                descrip="Si buscas una forma eficaz de promover tu negocio, nos especializamos en ofrecer servicios que ayudan a emprendedores como tu, a publicar y promocionar sus proyectos en nuestra plataforma."/>
                <!-- Repeat similar profile blocks as needed -->
            </section>
        </main>

</Layout>
<style>
.hero {
    width: 100%;
    height: auto;
    text-align: center;
    margin-top: 60px;
}

.hero img {
    width: 80%;

}
.profiles {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    padding: 20px;
    margin-top: 20px;
}

/* Responsive adjustments */
@media (max-width: 600px) {
    .profiles {
        flex-direction: row;
        align-items: center;
    }

    .profile {
        max-width: 90%;
    }
    .hero img{
        width: 100%;
    }
}
</style>
