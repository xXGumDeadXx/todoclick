<script>
let currentServiceIndex = 0;
const services = document.querySelectorAll('.service-container'); // Cambié a .service-container
const totalServices = services.length;

// Mostrar servicio con animación
function showService(index) {
    // Ocultar el servicio actual con animación de salida
    const currentService = document.querySelector('.service-container.active');
    if (currentService) {
        currentService.classList.add('exit');
        currentService.addEventListener('transitionend', () => {
            currentService.classList.remove('active', 'exit');
        }, { once: true });
    }

    // Mostrar el siguiente servicio con animación de entrada
    const nextService = services[index];
    nextService.classList.add('active');
}

// Cambiar al siguiente servicio
function nextService() {
    currentServiceIndex = (currentServiceIndex + 1) % totalServices;
    showService(currentServiceIndex);
}

// Mostrar el primer servicio al cargar la página
showService(currentServiceIndex);

// Cambiar de servicio automáticamente cada 5 segundos
setInterval(nextService, 5000); // Cambia de servicio cada 5 segundos
</script>

<style>

:root{
    --color-principal:#0D4FA6;
    --color-secundario: #3EA62E;

}
/* General Styles */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    background-color: #f4f4f4;
}

#main-content {
    width: 100%;
    margin: 0 auto;
}

h1, h2, h3 {
    color: #333;
}

/* Profile Section */
.profile {
    background-color: #fff;
    padding: 20px;
    margin-bottom: 20px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
}

.profile-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.profile-content {
    display: flex;
    width: 100%;
    flex-wrap: wrap;
}

.profile-text {
    flex: 1;
    padding-right: 20px;
}

.profile-image-wrapper {
    flex: 1;
    display: flex;
    justify-content: flex-end;
}

.profile-image {
    width: 300px;
    height: 300px;
    border-radius: 10%;
    object-fit: cover;
}

/* Services Section */
.services {
    background-color: #fff;
    padding: 40px 20px;
    margin-bottom: 20px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
}

.service-carousel{
    display:flex;
    overflow: hidden;
}

/* New service-item structure */
.service-container {
    display: flex;
    justify-content: space-between;
    margin: 20px 0;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    overflow: hidden;
}

/* Left container for image */
.service-image-container {
    width: 50%; /* Adjust width as needed */
}

.service-image-container img {
    width: 100%;
    height: auto;
    object-fit: cover;
    border-radius: 8px 0 0 8px;
}

/* Right container for text */
.service-text-container {
    width: 50%; /* Adjust width as needed */
    padding: 20px;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.service-text-container h3 {
    margin-top: 0;
    font-size: 1.5em;
    color: #444;
}

.service-text-container p {
    font-size: 1em;
    color: #666;
    margin-top: 10px;
}

/* Contact Info Section */
.contact-info {
    background-color: #f9f9f9;
    padding: 20px;
    text-align: center;
}

/* Appointment Section */
.appointment {
    background-color: #fff;
    padding: 40px;
    text-align: center;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
}

.contact-methods {
    display: flex;
    justify-content: center;
    margin-top: 20px;
}

.contact-method {
    display: flex;
    align-items: center;
    margin: 0 15px;
}

.contact-method svg {
    margin-right: 10px;
}

.contact-method p {
    margin: 0;
}

/* Location Section */
.location {
    background-color: #fff;
    padding: 40px 20px;
    margin-top: 20px;
    text-align: center;
}

.location h2 {
    margin-bottom: 20px;
}

.map {
    width: 100%;
    height: 300px;
    border: none;
    margin-bottom: 20px;
}

.social-media-links a {
    display: block;
    color: #3498db;
    text-decoration: none;
}

.social-media-links a:hover {
    text-decoration: underline;
}

/* Media Queries for Responsiveness */
@media (max-width: 768px) {
    .service-container {
        flex-direction: column;
    }

    .service-image-container {
        width: 100%; /* Full width on small screens */
    }

    .service-text-container {
        width: 100%; /* Full width on small screens */
        padding: 15px;
    }
    .service-carousel{
        flex-direction: column;
    }
}




#services {
    position: relative;
    height: 400px; /* Altura fija del contenedor */
    overflow: hidden; /* Evita desbordamiento de imágenes */
    display: flex;
    justify-content: center;
    align-items: center;
}

.service-container {
    position: relative;
    top: 0;
    left: 0;
    right: 0;
    opacity: 0;
    transform: translateX(100%);
    transition: opacity 1s ease, transform 1s ease;
    z-index: 1; /* Para asegurar que solo una esté visible a la vez */
    width: 100%; /* Asegurar que las imágenes ocupen todo el ancho */
    display: flex;
    justify-content: center;
    align-items: center;
}

.service-container img {
    max-width: 100%;
    height: auto;
    border-radius: 15px; /* Da un borde redondeado suave */
}

.service-container.active {
    opacity: 1;
    transform: translateX(0);
    z-index: 2;
}

.service-container.exit {
    opacity: 0;
    transform: translateX(-100%);
    z-index: 1;
}
</style>
